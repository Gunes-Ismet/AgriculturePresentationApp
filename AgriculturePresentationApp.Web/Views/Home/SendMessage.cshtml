@model CreateContactDTO

<div class="col-md-9 contact-middle">
	<h2>Bize Yazın</h2>
	<form asp-controller="Default" asp-action="SendMessage">
		<input type="hidden" asp-for="Date" />
		<div class="form-agileinfo">
			<p>Ad Soyad</p>
			<input type="text" asp-for="Name" placeholder="Ad Soyad..." required="" />
			<span asp-validation-for="Name" class="text-danger"></span>
			<p>E-mail</p>
			<input type="email" asp-for="Mail" placeholder="E-mail Adresiniz..." required="" />
			<span asp-validation-for="Mail" class="text-danger"></span>
		</div>
		<div class="form-agileits-w3layouts">
			<p>Mesaj</p>
			<textarea asp-for="Message" placeholder="Mesajınız..." required=""></textarea>
			<span asp-validation-for="Message" class="text-danger"></span>
		</div>
			<input type="submit" value="Mesajı Gönder">
		<div class="clearfix"></div>
	</form>
</div>