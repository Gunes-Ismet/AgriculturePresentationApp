@model List<GetImageVM>

<div class="gallery" id="gallery">
    <div class="container">
        <h3 class="tittle">Galerimiz</h3>
        <p class="heading-btm-w3ls">Suspendisse fringilla pellentesque risus sit amet bibendum.</p>
        <div class="agile_gallery_grids w3-agile">
            <ul class="clearfix demo">
                @foreach (var item in Model)
                {
                    <li>
                        <div class="gallery-grid1">
                            <img src="~/images/image/@item.ImageUrl" alt=" " class="img-responsive" style="width:250px; height:200px;" />
                            <div class="p-mask">
                                <h4><span>@item.Title</span></h4>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
