@model List<GetAnnouncementVM>

<div class="blog" id="blog">
	<div class="container">
		<h3 class="tittle">Son Duyurular</h3>
		<p class="heading-btm-w3ls">Çiftliklerimniz ve tarlalarımızdan son haberler aşağıdadır.</p>
		@foreach (var item in Model)
		{
			<div class="blog-grid-w3-agileits">
				<div class=" col-md-5 blog-info-w3layouts">
					<h6> <a href="#" data-toggle="modal" data-target="#myModal2-@item.Id">@item.Title</a></h6>
					<div class="inner-info">
						<a href="#" class="blog-text-w3ls bar"></a><span>@item.Date.ToShortDateString()</span>
						<p class="para-w3-agileits">@item.Description</p>
					</div>

				</div>
				<div class="clearfix"></div>
			</div>
		}
	</div>
</div>


