@model List<GetAssistanceVM>

<div class="sevices-w3layouts" id="services">
    <div class="container">
        <h3 class="tittle">Hizmetlerimiz</h3>
        <p class="heading-btm-w3ls">Suspendisse fringilla pellentesque risus sit amet bibendum.</p>
        <div class="services-main">
            @foreach (var item in Model)
            {
                <div class="col-md-3 sevices-w3layouts-grids wow fadeInUp animated w-25 align-content-center col-sm-2 col-lg-4" style="height:200px; margin:4px;" data-wow-delay=".5s">
                    <h5>@item.Title</h5>
                    <p>@item.Description</p>

                    <div class="sevices-w3layouts-img c1">
                        <img aria-hidden="true" src="~/images/assistance/@item.Image" class="w-100" style="height:200px; object-fit:cover;"/>
                    </div>
                </div>
            }
        </div>
        @* <div class="clearfix"> </div> *@
    </div>
</div>