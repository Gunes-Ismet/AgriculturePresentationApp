
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model List<GetSocialMediaVM>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Site</th>
                            <th>Url</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <th>@item.Url</th>
                                <td>
                                    <a asp-area="Admin" asp-controller="SocialMedias" asp-action="UpdateSocialMedia" asp-route-id="@item.Id" class="btn btn-outline-success">Güncelle</a>
                                </td>                               
                            </tr>
                        }
                    </tbody>
                </table>                
            </div>
        </div>
    </div>
</div>
