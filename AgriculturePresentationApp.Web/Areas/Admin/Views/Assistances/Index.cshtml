
@model List<GetAssistanceVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                       <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                       </tr>
                    </thead>
                    <tbody>
                       @foreach (var assistance in Model)
                        {
                            <tr>
                                <td>@assistance.Id</td>
                                <td>@assistance.Title</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Assistances" asp-action="UpdateAssistance" asp-route-id="@assistance.Id" class="btn btn-outline-success">Güncelle</a>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-@assistance.Id">
                                        Sil
                                    </button>

                                    <div class="modal fade" id="exampleModal-@assistance.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Silme Uyarısı</h5>
                                                </div>
                                                <div class="modal-body">
                                                    Silmek istediğinize emin misiniz?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">İptal</button>
                                                    <a asp-area="Admin" asp-controller="Assistances" asp-action="RemoveAssistance" asp-route-id="@assistance.Id" class="btn btn-outline-danger">Sil</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-area="Admin" asp-controller="Assistances" asp-action="CreateAssistance" class="btn btn-outline-info mt-2">Yeni Hizmet Ekle</a>
            </div>
        </div>
    </div>
</div>